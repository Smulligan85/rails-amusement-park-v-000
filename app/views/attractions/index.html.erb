<h1>Listing attractions</h1>

<table>
  <tr>
    <td><strong>Picture</strong></td>
    <td><strong>Name</strong></td>
    <td><strong>Tickets</strong></td>
    <td><strong>Details</strong></td>
  </tr>
  <% @attractions.each do |attraction| %>
    <tr>
      <td><img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" alt="Ferris Wheel" width="100"></td>
      <td><%= attraction.name %></td>
      <td><%= attraction.tickets %></td>
      <% if current_user.admin %>
        <td><%= link_to "Show #{attraction.name}", attraction_path(attraction) %></td>
      <% else %>
          <td><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></td><br>
        <% end %>
      <% end %>
    </tr>
</table>
<br>
<%= link_to "New Attraction", new_attraction_path %>
